<% include layout.ejs %>
<h1> Message Board</h1>
<a href="/messages/new">New message +</a>
<ul>
    <% messages.forEach(msg=>{%>
        <li>
            <strong><%= msg.title%></strong>by <%= msg.username %> <br>
            <%= msg.content %>
            <% if (user?.is_admin) { %>
                <form action="/messages/<%msg.id %>/delete" method="POST" style="display:inline;">
                    <button>dlete</button>
                </form>
            <% } %>
        </li>
    <% }) %>
    </ul>