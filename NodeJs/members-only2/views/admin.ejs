<!-- views/admin.ejs -->
<div class="row">
    <div class="col-md-6">
      <p>Enter the admin code to become an administrator and gain the ability to delete messages!</p>
      <form action="/users/admin" method="POST">
        <div class="mb-3">
          <label for="admin_code" class="form-label">Admin Code</label>
          <input type="text" class="form-control" id="admin_code" name="admin_code" required>
        </div>
        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }); %>
            </ul>
          </div>
        <% } %>
        <button type="submit" class="btn btn-primary">Become Admin</button>
      </form>
    </div>
  </div>