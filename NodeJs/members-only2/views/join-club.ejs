<!-- views/join-club.ejs -->
<div class="row">
    <div class="col-md-6">
      <p>Enter the secret code to join the club and see who wrote each message!</p>
      <form action="/users/join-club" method="POST">
        <div class="mb-3">
          <label for="secret_code" class="form-label">Secret Code</label>
          <input type="text" class="form-control" id="secret_code" name="secret_code" required>
        </div>
        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }); %>
            </ul>
          </div>
        <% } %>
        <button type="submit" class="btn btn-primary">Join the Club</button>
      </form>
    </div>
  </div>